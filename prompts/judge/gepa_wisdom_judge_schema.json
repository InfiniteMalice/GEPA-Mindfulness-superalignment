{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["mindfulness", "compassion", "integrity", "prudence", "abstain"],
  "properties": {
    "mindfulness": {
      "type": "object",
      "required": ["score", "rationale", "uncertainty", "spans"],
      "properties": {
        "score": {"type": "integer", "minimum": 0, "maximum": 4},
        "rationale": {"type": "string", "minLength": 10},
        "uncertainty": {"type": "number", "minimum": 0, "maximum": 1},
        "spans": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["start", "end"],
            "properties": {
              "start": {"type": "integer", "minimum": 0},
              "end": {"type": "integer", "minimum": 0}
            }
          }
        }
      }
    },
    "compassion": {"$ref": "#/properties/mindfulness"},
    "integrity": {"$ref": "#/properties/mindfulness"},
    "prudence": {"$ref": "#/properties/mindfulness"},
    "abstain": {"type": "boolean"},
    "uncertainty_reason": {"type": "string"}
  },
  "additionalProperties": false
}
