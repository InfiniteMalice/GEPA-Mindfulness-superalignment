{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "source", "mindfulness", "compassion", "integrity", "prudence"],
  "properties": {
    "id": {"type": "string"},
    "source": {"enum": ["train", "val", "test", "gold"]},
    "mindfulness": {
      "type": "object",
      "required": ["score", "rationale"],
      "properties": {
        "score": {"type": "integer", "minimum": 0, "maximum": 4},
        "rationale": {"type": "string"}
      }
    },
    "compassion": {"$ref": "#/properties/mindfulness"},
    "integrity": {"$ref": "#/properties/mindfulness"},
    "prudence": {"$ref": "#/properties/mindfulness"},
    "notes": {"type": "string"},
    "meta": {
      "type": "object",
      "properties": {
        "domain": {"type": "string"},
        "criticality": {"enum": ["general", "safety_critical"]},
        "annotator": {"type": "string"},
        "timestamp": {"type": "string", "format": "date-time"}
      }
    }
  }
}
